{
  "name": "iotizabot",
  "description": "Telegram bot to manage your iota investment.",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node -r ts-node/register ./src/main.ts",
    "dev": "nodemon",
    "build": "tsc"
  },
  "dependencies": {
    "node-telegram-bot-api": "^0.30.0"
  },
  "devDependencies": {
    "@types/node": "^12.0.3",
    "@types/node-telegram-bot-api": "^0.31.0",
    "dotenv": "^8.0.0",
    "nodemon": "^1.19.1",
    "ts-node": "^8.2.0",
    "typescript": "^3.5.1"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}